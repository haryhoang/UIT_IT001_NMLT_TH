// Mô tả bài toán: 1 phần tử được định nghĩa là điểm yên ngựa khi nó là phần tử nhỏ nhất trong hàng nhưng lại lớn nhất trong cột (hoặc ngược lại)
// Test case: 
Input
3
4 6 3
5 6 8
3 6 7
Output: 5

Code tham khảo: 
#include <iostream>
#include <string.h>
using namespace std;
#define MAX 100

void input(int a[][MAX], int &n)
{
    cin >> n;
    for (int i=0; i<n; i++)
        for (int j=0; j<n;j++)
        cin >> a[i][j];
}
void output(int a[][MAX], int n)
{
    float maxx = 0.8, minn = 0.5;
    int cnt = 0, col = 0;
    for (int i=0; i<n; i++)
    {
        for (int j=0; j<n; j++)
        {
            if ( minn == 0.5 || a[i][j] < minn )
                {
                    minn = a[i][j];
                    col = j;
                }
        }
        for (int j=0; j<n; j++)
        {
            if ( maxx == 0.8 || a[j][col] > maxx )
                maxx = a[j][col];
        }
        if ( minn == maxx )
        {
            cout << minn;
            cnt++;
        }
        minn = 0.5; maxx = 0.8;

    }
    if ( cnt == 0)
        cout << "No exist saddle point";
    return;
}

int main()
{
    int n;
    int a[MAX][MAX];
    input(a, n);
    output(a, n);
}
